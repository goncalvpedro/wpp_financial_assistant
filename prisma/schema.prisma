generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model user {
    id           String        @id @default(uuid())
    phone        String        @unique
    name         String?
    created_at   DateTime      @default(now())
    transactions transaction[]
}

model transaction {
    id          String   @id @default(uuid())
    user_id     String
    type        String
    amount      Float
    category    String
    description String
    date        DateTime
    created_at  DateTime @default(now())

    user user @relation(fields: [user_id], references: [id])
}
